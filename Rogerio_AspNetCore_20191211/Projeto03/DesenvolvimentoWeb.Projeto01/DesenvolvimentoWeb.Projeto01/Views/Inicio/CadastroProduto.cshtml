@model Produto
@{
    ViewData["Title"] = "CadastroProduto";
}

<h2>Formulário - Cadastro de Produtos</h2>

<form asp-action="CadastroProduto">
    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="Codigo"></label>
                <input asp-for="Codigo" class="form-control" />
                <span asp-validation-for="Codigo"></span>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="Descricao"></label>
                <input asp-for="Descricao" class="form-control" />
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="Preco"></label>
                <input asp-for="Preco" class="form-control" />
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="DataCadastro"></label>
                <input asp-for="DataCadastro" class="form-control" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <input type="submit" value="Enviar" />
        </div>
    </div>
</form>
