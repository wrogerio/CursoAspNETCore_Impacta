@model Produto
@{
    ViewData["Title"] = "MostrarProduto";
}

<h2>Cadastro de Produtos</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Código</th>
            <th>Descrição</th>
            <th>Preço</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Codigo</td>
            <td>@Model.Descricao</td>
            <td>@Model.Preco.ToString("c")</td>
        </tr>
    </tbody>
</table>

